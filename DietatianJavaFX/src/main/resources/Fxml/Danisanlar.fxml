<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dietatianjavafx.Controllers.DanisanlarController">
   <children>
      <VBox prefHeight="500.0" prefWidth="700.0">
         <children>
            <HBox prefHeight="36.0" prefWidth="600.0">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
               <children>
                  <TextField fx:id="txtDanisanAra" prefHeight="32.0" prefWidth="498.0" promptText="Danışan Ara" style="-fx-background-radius: 20;" styleClass="label-text" stylesheets="@../Styles/login.css">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnAra" mnemonicParsing="false" onAction="#ara" prefHeight="42.0" prefWidth="51.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="ARA">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnYenile" mnemonicParsing="false" onAction="#yenile" prefHeight="42.0" prefWidth="66.0" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="Yenile">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnDanisanEkle" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="+">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <VBox fx:id="vboxDanisanlar" prefHeight="493.0" prefWidth="670.0" styleClass="button1" stylesheets="@../Styles/login.css">
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
               <children>
                  <ListView fx:id="danisanlarListview" prefHeight="414.0" prefWidth="670.0" style="-fx-background-color: transparent;" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
